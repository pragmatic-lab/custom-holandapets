<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sale_order_conf_text_view_form" model="ir.ui.view">
		<field name="name">sale.order_conf_text.form</field>
		<field name="model">sale.order_conf_text</field>
		<field name="arch" type="xml">
			<form>
				<h3 class="panel-title">Configuración Impresión</h3>

				<group col="2">
					<field name="name"/>
					<field name="header_text"/>
					<field name="footer_text"/>
				</group>

			</form>
		</field>
	</record>
		
		
	<record id="sale_order_conf_text_view_tree" model="ir.ui.view">
		<field name="name">sale.order_conf_text.tree</field>
		<field name="model">sale.order_conf_text</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
			</tree>
		</field>
	</record>


	<record id="sale_order_conf_text_action" model="ir.actions.act_window">
		<field name="name">Configuración Impresión</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sale.order_conf_text</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
		  <p class="o_view_nocontent_smiling_face">
			Crear una nueva configuración
		  </p>
		</field>
	</record>



</odoo>